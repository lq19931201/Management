<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:textColor="#666666"
        android:textSize="13sp"></TextView>

    <CheckBox
        android:id="@+id/chooseCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"></CheckBox>

    <LinearLayout
        android:id="@+id/operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jian"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:scaleType="center"
            android:src="@mipmap/icon_jian"></ImageView>

        <ImageView
            android:id="@+id/fa"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:scaleType="center"
            android:src="@mipmap/icon_fa"></ImageView>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:button="@drawable/third_detail_chcekbox"></CheckBox>

        <TextView
            android:id="@+id/bufuhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="不符合"
            android:textColor="#353535"
            android:textSize="13sp"></TextView>

        <ImageView
            android:id="@+id/remark"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:scaleType="center"
            android:src="@mipmap/icon_bianji"></ImageView>

        <ImageView
            android:id="@+id/take_photo"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:scaleType="center"
            android:src="@mipmap/icon_zhaopian"></ImageView>

        <TextView
            android:id="@+id/read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:text="查看"
            android:textColor="#576B95"
            android:textSize="13sp"></TextView>
    </LinearLayout>
</LinearLayout>
